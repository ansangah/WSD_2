        "body": {
          "mode": "raw",
          "raw": "{\n  \"items\": [\n    {\"bookId\": \"{{sampleBookId}}\", \"quantity\": 1}\n  ],\n  \"shippingFee\": \"0\",\n  \"discountTotal\": \"0\",\n  \"customerName\": \"Sample Reader\",\n  \"customerEmail\": \"reader@example.com\"\n}"
        }
