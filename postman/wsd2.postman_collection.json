    {
      "name": "Auth / Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"P@ssw0rd!\"\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Login OK\", function () {",
                "  pm.response.to.have.status(200);",
                "  pm.expect(pm.response.json()).to.have.property(\"accessToken\");",
              "});",
              "const body = pm.response.json();",
              "pm.collectionVariables.set(\"accessToken\", body.accessToken);",
              "pm.collectionVariables.set(\"refreshToken\", body.refreshToken);",
              "try { pm.environment.set(\"accessToken\", body.accessToken); pm.environment.set(\"refreshToken\", body.refreshToken); } catch (e) {}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Auth / Refresh",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/refresh",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "refresh"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "if (!pm.variables.get(\"refreshToken\")) {",
              "  throw new Error(\"refreshToken missing - run login first\");",
              "}"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Refresh OK\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "const body = pm.response.json();",
              "pm.collectionVariables.set(\"accessToken\", body.accessToken);",
              "pm.collectionVariables.set(\"refreshToken\", body.refreshToken);",
              "try { pm.environment.set(\"accessToken\", body.accessToken); pm.environment.set(\"refreshToken\", body.refreshToken); } catch (e) {}"
            ],
            "type": "text/javascript"
          }
        }
      ]
