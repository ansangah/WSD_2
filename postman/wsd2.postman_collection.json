          "script": {
            "exec": [
              "if (!pm.variables.get(\"accessToken\")) {",
              "  throw new Error(\"accessToken missing\");",
              "}",
              "if (!pm.variables.get(\"sampleBookId\")) {",
              "  throw new Error(\"Set sampleBookId from DB/seed before running this request\");",
              "}"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Order created\", function () {",
              "  pm.response.to.have.status(201);",
